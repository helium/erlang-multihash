{cover_enabled, true}.

{cover_opts, [verbose]}.

{cover_export_enabled, true}.

{covertool, [{coverdata_files, ["eunit.coverdata"]}]}.

{cover_excl_mods, [
    multihash_nif
]}.

{plugins, [covertool]}.

{erl_opts, [warn_untyped_records, debug_info, warnings_as_errors]}.

{dialyzer, [
    {warnings, [
        no_return,
        no_match,
        unmatched_returns,
        error_handling,
        race_conditions,
        underspecs
    ]}
]}.

{pre_hooks, [
    {compile, "cargo build --release"},
    {compile, "sh -c \"cp $(cat so-path) priv/libnative.so\""}
]}.
